<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.password">123123</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433</property>
        <property name="hibernate.connection.username">USDRater</property>
        <property name="hibernate.dialect">org.hibernate.dialect.SAPDBDialect </property>
        <property name="show_sql">true</property>
        <mapping resource="com/skuranov/common/Stock.hbm.xml"></mapping>
    </session-factory>
</hibernate-configuration>